{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
  "experimentalTailwindcss": {
    "stylesheet": "./src/app.css",
    "attributes": ["class"],
    "functions": ["clsx", "cn"],
    "preserveWhitespace": true
  },
	"experimentalSortPackageJson": true,
	"ignorePatterns": ["package-lock.json", "pnpm-lock.yaml", "*.md", "tsconfig.json", "svelte.config.js", "src/*.json"],
}
