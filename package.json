{
	"name": "arcane-website",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"packageManager": "pnpm@10.18.2",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"velite": "velite",
		"velite:watch": "velite --watch",
		"dev": "pnpm velite:watch & vite dev",
		"dev:wrangler": "pnpm velite:watch & wrangler dev",
		"prebuild": "pnpm velite",
		"build": "vite build",
		"preview": "vite preview",
		"preview:wrangler": "wrangler dev --local",
		"deploy": "pnpm build && wrangler deploy",
		"deploy:dry-run": "pnpm build && wrangler deploy --dry-run",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"biome": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.548.0",
		"@shikijs/langs": "^3.14.0",
		"@shikijs/themes": "^3.14.0",
		"@sveltejs/kit": "^2.48.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24.9.1",
		"bits-ui": "^2.14.1",
		"clsx": "^2.1.1",
		"isomorphic-dompurify": "^2.30.1",
		"mdsx": "^0.0.7",
		"package-manager-detector": "^1.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"runed": "^0.35.1",
		"shiki": "^3.14.0",
		"svelte": "^5.42.2",
		"svelte-check": "^4.3.3",
		"svelte-toolbelt": "^0.10.6",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.16",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"velite": "^0.3.0",
		"vite": "^7.1.12",
		"wrangler": "^4.45.0"
	},
	"dependencies": {
		"@prettier/sync": "^0.6.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/enhanced-img": "^0.8.4",
		"mode-watcher": "^1.1.0",
		"rehype-pretty-code": "^0.14.1",
		"rehype-slug": "^6.0.0",
		"remark-code-import": "^1.2.0",
		"remark-gfm": "^4.0.1",
		"unist-builder": "^4.0.0",
		"unist-util-visit": "^5.0.0"
	}
}
